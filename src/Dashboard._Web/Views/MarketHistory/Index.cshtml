@inject IStringLocalizer<SharedResource> SharedLocalizer
@model MarketHistoryViewModel
@{
    ViewData["Title"] = SharedLocalizer["MarketHistory"];
}

<section id="skeleton-section">
    
    <div class="d-flex flex-column">

        <div class="row h-80vh order-1 order-md-2">
            <div class="col-12 mb-3">
                <partial name="Components/_LineChartSkeleton" model="new LineChartSkeletonViewModel { HeightPixels = 221 }" />
            </div>
        </div>

        <div class="row h-15vh order-2 order-md-1">

            <div class="col-12 col-xs-12 col-md-12 col-lg-6 col-xl-4 mb-3 d-none d-md-block">
                <partial name="Components/_LineChartSkeleton" model="new LineChartSkeletonViewModel { HeightPixels = 221 }" />
            </div>

            <div class="col-12 col-xs-12 col-md-12 col-lg-6 col-xl-8 mb-3 d-flex">
                <div class="row flex-fill">
                    @for (int i = 0; i < 3; i++)
                    {
                        <div class="col-4">
                            <partial name="Components/_MetricSkeleton" />
                        </div>
                    }
                </div>
            </div>

        </div>

    </div>

</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const currentUrl = new URL(window.location.href);
            const ticker = currentUrl.searchParams.get('ticker') || 'SXRV.DE';
            const sectionUrl = `/market-history/content?ticker=${encodeURIComponent(ticker)}`;

            loadSkeletonSection(sectionUrl);
        });
    </script>
}
