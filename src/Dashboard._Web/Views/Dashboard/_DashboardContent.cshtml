@inject IStringLocalizer<SharedResource> SharedLocalizer
@using System.Globalization
@using Dashboard.Application.Helpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DashboardViewModel
@{
    var modes = new Dictionary<string, string>
    {
        { "profit", SharedLocalizer["ProfitEur"] },
        { "profit-percentage", SharedLocalizer["ProfitPct"] },
        { "value", SharedLocalizer["Worth"] }
    };

    var currentTimerange = 
        Context.Request.Query.TryGetValue("timerange", out var value) && !string.IsNullOrWhiteSpace(value)
            ? value.ToString()
            : "ALL";

    var currentMode =
        Context.Request.Query.TryGetValue("mode", out var modeVal) && !string.IsNullOrWhiteSpace(modeVal)
            ? modeVal.ToString()
            : "profit";

    var currentTickersString = 
        Context.Request.Query.TryGetValue("tickers", out var tickersVal) && !string.IsNullOrWhiteSpace(tickersVal)
            ? tickersVal.ToString()
            : null;

    var currentTickers = currentTickersString?.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries) ?? [];
    
    int? currentYear = null;
    if (Context.Request.Query.TryGetValue("year", out var yearVal) && !string.IsNullOrWhiteSpace(yearVal))
    {
        if (int.TryParse(yearVal, out var parsedYear))
        {
            currentYear = parsedYear;
        }
    }
}

<div class="row" style="height: 25vh;">
    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-4 mb-3">
        <div class="card">
            <div class="card-body d-flex flex-column justify-content-evenly">
                <!-- Mode Filter -->
                <div>
                    <label class="filter-label mb-1">Weergave</label>
                    <div class="btn-group w-100" role="group">
                        @foreach (var mode in modes)
                        {
                            <a asp-controller="Dashboard" asp-action="Index"
                               asp-route-timerange="@(currentYear.HasValue ? null : currentTimerange)"
                               asp-route-tickers="@currentTickersString"
                               asp-route-year="@currentYear"
                               asp-route-mode="@mode.Key"
                               class="btn btn-ticker btn-sm px-2 py-1 @(mode.Key == currentMode ? "active" : "")">
                                @mode.Value
                            </a>
                        }
                    </div>
                </div>
                
                <!-- Timerange Filter (hidden when year is selected) -->
                @if (!currentYear.HasValue)
                {
                    <div>
                        <label class="filter-label mb-1">Periode</label>
                        <div class="btn-group w-100" role="group">
                            @foreach (var t in FilterHelper.TIMERANGES)
                            {
                                <a asp-controller="Dashboard" asp-action="Index"
                                   asp-route-timerange="@t"
                                   asp-route-tickers="@currentTickersString"
                                   asp-route-mode="@currentMode"
                                   class="btn btn-ticker btn-sm px-2 py-1 @(t == currentTimerange ? "active" : "")">
                                    @t
                                </a>
                            }
                        </div>
                    </div>
                }
                
                <!-- Year Filter -->
                <div>
                    <label class="filter-label mb-1">Jaar</label>
                    <div class="btn-group w-100" role="group">
                        @{
                            var allYearUrl = Url.Action("Index", "Dashboard", new 
                            { 
                                timerange = "ALL", 
                                tickers = currentTickersString, 
                                mode = currentMode 
                                // year is intentionally omitted
                            });
                        }
                        <a href="@allYearUrl" class="btn btn-ticker btn-sm px-2 py-1 @(currentYear == null ? "active" : "")">
                            ALL
                        </a>
                        @foreach (var y in Model.Years)
                        {
                            var yearUrl = Url.Action("Index", "Dashboard", new 
                            { 
                                tickers = currentTickersString, 
                                year = y, 
                                mode = currentMode 
                                // timerange is intentionally omitted when year is selected
                            });
                            <a href="@yearUrl" class="btn btn-ticker btn-sm px-2 py-1 @(y == currentYear ? "active" : "")">
                                @y
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-8 mb-3">
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive h-100 m-0">
                    <table id="portfolioTable" class="table table-hover table-sm table-transparent mb-0 w-100">
                        <thead>
                            <tr>
                                <th>@SharedLocalizer["Ticker"]</th>
                                <th>@SharedLocalizer["PortfolioPct"]</th>
                                <th>@SharedLocalizer["Amount"]</th>
                                <th>@SharedLocalizer["TotalInvestment"]</th>
                                <th>@SharedLocalizer["Worth"]</th>
                                <th>@SharedLocalizer["ProfitEur"]</th>
                                <th>@SharedLocalizer["ProfitPct"]</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var row in Model.TableRows.OrderByDescending(tr => tr.ProfitPercentage))
                        {
                            var isActive = currentTickers.Contains(row.Ticker, StringComparer.OrdinalIgnoreCase);
                            var rowClass = isActive ? "table-active" : "";
                            var tickersRoute = isActive
                                ? string.Join(',', currentTickers.Where(t => !t.Equals(row.Ticker, StringComparison.OrdinalIgnoreCase)))
                                : (string.IsNullOrWhiteSpace(currentTickersString) ? row.Ticker : currentTickersString + "," + row.Ticker);

                            <tr class="position-relative @rowClass" style="cursor:pointer">
                                <td>
                                    @row.Ticker
                                    <a asp-controller="Dashboard" asp-action="Index"
                                       asp-route-timerange="@currentTimerange"
                                       asp-route-mode="@currentMode"
                                       asp-route-year="@currentYear"
                                       asp-route-tickers="@tickersRoute"
                                       class="stretched-link">
                                    </a>
                                </td>
                                <td>@((row.PortfolioPercentage * 100).ToString("F2") + "%")</td>
                                <td>@row.Amount</td>
                                <td data-order="@row.TotalInvestment.ToString(CultureInfo.InvariantCulture)">@row.TotalInvestment.ToString("C2")</td>
                                <td data-order="@row.Worth.ToString(CultureInfo.InvariantCulture)">@row.Worth.ToString("C2")</td>
                                <td data-order="@row.Profit.ToString(CultureInfo.InvariantCulture)">
                                    <span class="fw-bold @(row.Profit >= 0 ? "text-success" : "text-danger")">
                                        @row.Profit.ToString("C2")
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold @(row.ProfitPercentage >= 0 ? "text-success" : "text-danger")">
                                        @((row.ProfitPercentage * 100).ToString("F2") + "%")
                                    </span>
                                </td>
                            </tr>
                        }
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>@SharedLocalizer["Total"]</th>
                            <th></th>
                            <th></th>
                            <th>@Model.TableRows.Sum(tr => tr.TotalInvestment).ToString("C2")</th>
                            <th>@Model.TableRows.Sum(tr => tr.Worth).ToString("C2")</th>
                            <th>@Model.TableRows.Sum(tr => tr.Profit).ToString("C2")</th>
                            <th>@((Model.TableRows.Sum(tr => tr.Profit) / Model.TableRows.Sum(tr => tr.TotalInvestment) * 100).ToString("F2") + "%")</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-3" style="height: 70vh;">
    <div class="col-md-12">
        <partial name="Components/_LineChart" model="Model.LineChart" />
    </div>
</div>

<script>
    $(document).ready(function () {

        $('#portfolioTable').DataTable({
            paging: false,
            searching: false,
            ordering: true,
            info: false,
            lengthChange: false,
            order: [[4, 'desc']],
        });

    });
</script>