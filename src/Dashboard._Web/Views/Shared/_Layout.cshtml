<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>k-vandijk / portfolio / @($"{ViewData["Title"]}".ToLower())</title>
    
    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#F5FAFF" />
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <meta name="apple-mobile-web-app-status-bar-style" content="default"/>
    <meta name="apple-mobile-web-app-title" content="Ticker Dashboard"/>
    <link rel="manifest" href="/manifest.json"/>
    <link rel="apple-touch-icon" href="/icon-192x192.png"/>
    
    <partial name="_Styles"/>
</head>
<body>

    <!-- Top loading bar -->
    <div id="top-loading-bar"></div>

    <div class="d-flex">
        <partial name="_Sidebar" />

        <main class="flex-grow-1 p-3" id="main-content">
            @RenderBody()
        </main>
    </div>

    <partial name="_BottomNav" />

    <partial name="_Scripts" />
    @await RenderSectionAsync("Scripts", required: false)
    @if (TempData["ErrorMessage"] is string error && !string.IsNullOrWhiteSpace(error))
    {
        <script>
            $(document).ready(function () {
                showAlert("error", "@error");
            });
        </script>
    }
    
    <!-- PWA Service Worker Registration -->
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', function() {
                navigator.serviceWorker.register('/service-worker.js')
                    .then(function(registration) {
                        console.log('ServiceWorker registration successful:', registration.scope);
                    })
                    .catch(function(err) {
                        console.log('ServiceWorker registration failed:', err);
                    });
            });
        }
    </script>
</body>
</html>
