@model MarketHistoryMetricsCardViewModel

<div class="card h-100">
    <div class="card-body d-flex flex-column justify-content-center">
        <div class="metrics-card-grid">
            <div class="metrics-card-item">
                <div class="metrics-card-title">@Model.CurrentPrice.Title</div>
                <div class="metrics-card-value">@Model.CurrentPrice.Value</div>
            </div>

            <div class="metrics-card-divider" aria-hidden="true"></div>

            <div class="metrics-card-item">
                <div class="metrics-card-title">@Model.InterestEur.Title</div>
                <div class="metrics-card-value">@Model.InterestEur.Value</div>
            </div>

            <div class="metrics-card-divider" aria-hidden="true"></div>

            <div class="metrics-card-item">
                <div class="metrics-card-title">@Model.InterestPct.Title</div>
                <div class="metrics-card-value">@Model.InterestPct.Value</div>
            </div>
        </div>
    </div>
</div>