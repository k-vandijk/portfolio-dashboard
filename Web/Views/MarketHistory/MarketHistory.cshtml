@model MarketHistoryViewModel
@{
    ViewData["Title"] = "Market history";

    var tickers = new[] { "SXRV.DE", "BTC-EUR", "IS3N.DE" };
    var currentTicker = Context.Request.Query["ticker"].ToString();
}

<section id="skeleton-section">
    <div class="row mb-3" style="height: 15vh;">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Tickers</div>
                <div class="card-body d-flex align-items-center">
                    <div class="btn-group w-100" role="group">
                        @foreach (var t in tickers)
                        {
                            <a asp-controller="MarketHistory" asp-action="MarketHistory" asp-route-ticker="@t"
                               class="btn btn-ticker px-3 py-2 @(t == currentTicker ? "active" : "")">
                                @t
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 d-flex">
            <div class="row flex-fill">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="col-md-4">
                        <partial name="Components/_MetricSkeleton" />
                    </div>
                }
            </div>
        </div>

    </div>

    <div class="row mb-3" style="height: 80vh;">
        <div class="col-md-12">
            <partial name="Components/_LineChartSkeleton" />
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const currentUrl = new URL(window.location.href);
            const ticker = currentUrl.searchParams.get('ticker') || 'SXRV.DE';
            const sectionUrl = `/market-history/section?ticker=${encodeURIComponent(ticker)}`;

            loadSkeletonSection(sectionUrl);
        });
    </script>
}
