@model TableViewModel

<div class="card">
    <div class="card-header">@Model.Title</div>
    <div class="card-body">
        <table class="table table-hover table-sm mb-0">
            <thead class="table-light">
            @foreach (var column in Model.Columns)
            {
                <th>@column.Header</th>
            }
            </thead>
            <tbody>
            @if (!Model.Rows.Any())
            {
                <tr>
                    <td class="text-muted text-center py-4" colspan="@Model.Columns.Count">
                        @Model.EmptyText
                    </td>
                </tr>
            }
            else
            {
                foreach (var row in Model.Rows)
                {
                    <tr>
                        @foreach (var column in Model.Columns)
                        {
                            row.TryGetValue(column.Key, out var raw);
                            var text = raw?.ToString() ?? string.Empty;
                            <td>@text</td>
                        }
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>