@using Dashboard.Application.Helpers
@model Dashboard.Web.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";

    var modes = new[] { "profit", "profit-percentage", "value" };

    var currentTimerange = 
        Context.Request.Query.TryGetValue("timerange", out var value) && !string.IsNullOrWhiteSpace(value)
            ? value.ToString()
            : "ALL";

    var currentMode =
        Context.Request.Query.TryGetValue("mode", out var modeVal) && !string.IsNullOrWhiteSpace(modeVal)
            ? modeVal.ToString()
            : "profit";

    var currentTicker =
        Context.Request.Query.TryGetValue("tickers", out var tickerVal) && !string.IsNullOrWhiteSpace(tickerVal)
            ? tickerVal.ToString()
            : null;
}

<section id="skeleton-section">
    <div class="row mb-3" style="height: 25vh;">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body d-flex flex-column justify-content-evenly">
                    <div class="btn-group w-100" role="group">
                        @foreach (var mode in modes)
                        {
                            <a asp-controller="Dashboard" asp-action="Dashboard"
                               asp-route-timerange="@currentTimerange"
                               asp-route-tickers="@currentTicker"
                               asp-route-mode="@mode"
                               class="btn btn-ticker px-3 py-2 @(mode == currentMode ? "active" : "")">
                                @string.Join(" ", mode.Split("-").Select(x => x.ToUpper()))
                            </a>
                        }
                    </div>
                    <div class="btn-group w-100" role="group">
                        @foreach (var t in FilterHelper.TIMERANGES)
                        {
                            <a asp-controller="Dashboard" asp-action="Dashboard"
                               asp-route-timerange="@t"
                               asp-route-tickers="@currentTicker"
                               asp-route-mode="@currentMode"
                               class="btn btn-ticker px-3 py-2 @(t == currentTimerange ? "active" : "")">
                                @t
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive h-100">
                        <table class="table table-hover table-sm mb-0 w-100">
                            <thead>
                                <tr>
                                    <th>Ticker</th>
                                    <th>Portfolio %</th>
                                    <th>Amount</th>
                                    <th>Total investment</th>
                                    <th>Worth</th>
                                    <th>Profit €</th>
                                    <th>Profit %</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < 4; i++)
                                {
                                    <tr class="placeholder-glow">
                                        <td><span class="placeholder col-6"></span></td>
                                        <td><span class="placeholder col-6"></span></td>
                                        <td><span class="placeholder col-6"></span></td>
                                        <td><span class="placeholder col-6"></span></td>
                                        <td><span class="placeholder col-6"></span></td>
                                        <td><span class="placeholder col-6"></span></td>
                                        <td><span class="placeholder col-6"></span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3" style="height: 70vh;">
        <div class="col-md-12">
            <partial name="Components/_LineChartSkeleton" />
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const currentUrl = new URL(window.location.href);
            const tickers = currentUrl.searchParams.get('tickers');
            const mode = currentUrl.searchParams.get('mode');
            const timerange = currentUrl.searchParams.get('timerange');
            const sectionUrl = `/dashboard/section?tickers=${encodeURIComponent(tickers)}&mode=${encodeURIComponent(mode)}&timerange=${encodeURIComponent(timerange)}`;

            loadSkeletonSection(sectionUrl);
        });
    </script>
}
