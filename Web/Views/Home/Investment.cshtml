@{
    ViewData["Title"] = "Investment";

    var lineChartViewModel = new LineChartViewModel
    {
        Title = "Portfolio Growth",
        DataPoints =
        [
            new LineChartDataPoint { Label = "Jan", Value = 100 },
            new LineChartDataPoint { Label = "Feb", Value = 200 },
            new LineChartDataPoint { Label = "Mar", Value = 400 },
            new LineChartDataPoint { Label = "Apr", Value = 300 },
            new LineChartDataPoint { Label = "May", Value = 600 },
        ]
    };
}

<style>
    .dashboard-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        gap: 1rem;
        flex: 1 1 auto;
        min-height: 0;
    }

        .dashboard-grid > div {
            display: flex;
            align-items: stretch;
            justify-content: stretch;
            min-height: 0;
        }
</style>

<div class="dashboard-grid">
    <div>
    </div>
    <div>
        <partial name="Components/_PieChart"/>
    </div>
    <div>
        <partial name="Components/_LineChart" model="lineChartViewModel"/>
    </div>
    <div>
        <partial name="Components/_BarChart"/>
    </div>
</div>