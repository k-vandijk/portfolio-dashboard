@model LineChartViewModel
@{
    ViewData["Title"] = "Market history";

    LineChartDataPoint first = Model.DataPoints.First();
    LineChartDataPoint last = Model.DataPoints.Last();

    decimal currentPrice = last.Value;
    string currentPriceString = currentPrice.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("nl-NL"));

    decimal interest = last.Value - first.Value;
    string interestString = interest.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("nl-NL"));

    decimal interestPercentage = interest / first.Value * 100;
    string interestPercentageString = interestPercentage.ToString("F2") + "%";
}

<div class="row mb-3" style="height: 35vh;">
    <div class="col-md-4">
        <div class="card"></div>
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-4">
                <partial name="Components/_Metric" model='new MetricViewModel { Title = "Current price", Value = currentPriceString }' />
            </div>
            <div class="col-md-4">
                <partial name="Components/_Metric" model='new MetricViewModel { Title = "Interest €", Value = interestString }' />
            </div>
            <div class="col-md-4">
                <partial name="Components/_Metric" model='new MetricViewModel { Title = "Interest %", Value = interestPercentageString }' />
            </div>
        </div>
    </div>
</div>

<div class="row mb-3" style="height: 60vh;">
    <div class="col-md-12">
        <partial name="Components/_LineChart" model="Model" />
    </div>
</div>
