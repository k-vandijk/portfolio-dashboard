@model InvestmentViewModel
@{
    ViewData["Title"] = "Investment";

    var tickers = new[] { "SXRV.DE", "BTCEUR", "IS3N.DE" };
    var currentTickers = Context.Request.Query["tickers"].ToString().ToLower().Split(",");
}

<div class="row mb-3" style="height: 47vh;">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">Tickers</div>
            <div class="card-body d-flex align-items-center">
                <div class="btn-group w-100" role="group">
                    @foreach (var t in tickers)
                    {
                        <a asp-controller="Investment" asp-action="Investment" asp-route-tickers="@t"
                           class="btn btn-ticker px-3 py-2 @(currentTickers.Contains(t.ToLower()) ? "active" : "")">
                            @t
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <partial name="Components/_PieChart" model="Model.PieChart" />
    </div>
</div>

<div class="row mb-3" style="height: 48vh;">
    <div class="col-md-6">
        <partial name="Components/_LineChart" model="Model.LineChart" />
    </div>
    <div class="col-md-6">
        <partial name="Components/_BarChart" model="Model.BarChart" />
    </div>
</div>
